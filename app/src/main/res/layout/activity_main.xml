<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9FBFF"
        tools:context=".MainActivity">

    <View
            android:id="@+id/bgheader"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/bgheader"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/dp_pic"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/userpic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/nameuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:text="Arjun Sundram"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toEndOf="@+id/dp_pic"
            app:layout_constraintTop_toTopOf="parent"
    />

    <View
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/card"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bgheader"/>
    <ImageView
            android:id="@+id/whastapp_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/whatsapp"
            app:layout_constraintStart_toStartOf="@+id/card"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@+id/card"/>

    <TextView
            android:id="@+id/scoreactual_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="0"
            android:textSize="60sp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toEndOf="@+id/whastapp_pic"
            app:layout_constraintTop_toTopOf="@+id/card"
    />

    <View
            android:id="@+id/card_home"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/card"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card"/>
    <ImageView
            android:id="@+id/home_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="@+id/card_home"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@+id/card_home"/>

    <TextView
            android:id="@+id/home_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:text="Yes"
            android:textSize="45sp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toEndOf="@+id/home_pic"
            app:layout_constraintTop_toTopOf="@+id/card_home"
    />

    <Button
            android:id="@+id/check_button"
            android:text="Check"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="175dp"
            android:layout_height="50dp"

            app:layout_constraintTop_toBottomOf="@+id/card_home"
            android:layout_marginTop="50dp"
            android:background="@drawable/card" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>



